<view class="container">
  <view class="topic-main">
    <block wx:for="{{latest}}">
      <view class="topic-item" index="{{index}}" id="{{item.id}}" catchtap="redictDetail">
        <!-- <image class="member-avatar" src="{{item.member.avatar_normal}}" background-size="cover"></image> -->
        <view class="topic-info">
          <view class="topic-inner">
            <view class="topic-left">
              <view class="topic-title" id=''>
                <text style='font-size:16px'>{{item.title}}</text>
                <text>·{{item.author}}</text>
              </view>
              <view>
                <block wx:for="{{item.paragraphs}}">
                  <text class="member-nickname">{{item}}</text>
                </block>
              </view>
            </view>
            <!-- <view id='{{item.replies}}' class="reply-num">10</view> -->
          </view>
        </view>
      </view>
    </block>
  </view>



