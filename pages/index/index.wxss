/**index.wxss**/
@import "../../libs/weui.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 150rpx;
  color:#888888;
  font-size: 85%;
}

.flex-wrp {
  display: flex;
  height: 80rpx;
}

.input_item {
  position: relative;
  padding-left: 20rpx;
  left: 20rpx;
  height: 60rpx;
  border: 1px solid;
  border-radius:10rpx;
}

.input_title {
  vertical-align: middle;
  height: 60rpx;
}

.match-button {
  position: relative;
  top: 30rpx;
}

.intro {
  margin: 50rpx;
  font-size: 85%;
  color:#888888;
}

